<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nbSection" />

    <SeekBar
        android:id="@+id/nbSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="progress" />

    <SeekBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10" />

    <com.teachonmars.modules.widget.segmentedProgress.SegmentedProgress
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_24dp" />

    <com.teachonmars.modules.widget.segmentedProgress.SegmentedProgress
        android:id="@+id/progressView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <com.teachonmars.modules.widget.segmentedProgress.SegmentedProgress
        android:id="@+id/progressView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@mipmap/ic_launcher" />

    <com.teachonmars.modules.widget.segmentedProgress.SegmentedProgress
        android:id="@+id/progressView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_line_24dp" />
</LinearLayout>
